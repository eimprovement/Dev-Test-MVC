@model IEnumerable<eimprovement.Domain.Models.Status>

@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>The Online Pet Superstore</h1>
    <p class="lead">For all of your furry, feathery, and scaly companion needs</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">

    <div class="col-md-6">
        <h2>Welcome to PetStore</h2>
        <p>
            Come and see all of the companions in our store right now.
        </p>
    </div>

    <div class="col-md-6">
        <h2>Get a New Friend</h2>
        @using (Html.BeginForm("Filter", "Home", FormMethod.Post, new { @name = "Form1" }))
        {
            @Html.DropDownList("id", new SelectList(Model, "id", "name"), "Availability", new { @id = "ddlstatus" })
            @Html.Hidden("name", null, new { @id = "hfStatusName" })
        }
    </div>
</div>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">

    $("body").on("change", "#ddlstatus", function () {
        $("#hfStatusName").val($(this).find("option:selected").text());
        document.forms["Form1"].submit();
    });

</script>
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            $(function () {
                alert("@TempData["Message"]");
            });
    </script>
}