
@{
    ViewBag.Title = "PetModal";
    var pet = ViewBag.pet;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Pet Detail</h4>
</div>
<div class="modal-body">

    <form id="savePetForm">
        <div class="form-group">
            <label for="petId">Id</label>
            <input class="form-control" id="petId" value="@pet.id" disabled>
        </div>
        <div class="form-group">
            <label for="petName">Name</label>
            <input class="form-control" id="petName" value="@pet.name">
        </div>
        <div class="form-group">
            <label for="petStatus">Status</label>
            <select class="form-control" id="petStatus">
                <option>available</option>
                <option>pending</option>
                <option>sold</option>
            </select>
            <script>
                $("#petStatus").val("@pet.status");
            </script>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="updatePet()">Save</button>
    <button type="button" class="btn btn-danger" onclick="deletePet(@pet.id)">Delete</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>

