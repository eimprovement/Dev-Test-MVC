
@{
    ViewBag.Title = "PetModal";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Add New Pet</h4>
</div>
<div class="modal-body">

    <form id="savePetForm">
        <div class="form-group">
            <label for="petName">Name</label>
            <input class="form-control" id="petName">
        </div>
        <div class="form-group">
            <label for="petStatus">Status</label>
            <select class="form-control" id="petStatus">
                <option selected>available</option>
                <option>pending</option>
                <option>sold</option>
            </select>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="addPet()">Save</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>

